<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.nillin.movienight.ui.main.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@animator/nav_default_enter_anim"
            app:exitAnim="@animator/nav_default_exit_anim"/>
        <action
            android:id="@+id/action_mainFragment_to_addFragment"
            app:destination="@+id/addFragment"/>
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.nillin.movienight.ui.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/fragment_detail">
    </fragment>

    <fragment
        android:id="@+id/addFragment"
        tools:layout="@layout/fragment_add_movie_bottomsheet"
        android:name="com.nillin.movienight.ui.AddMovieBottomsheetFragment">
    </fragment>
</navigation>